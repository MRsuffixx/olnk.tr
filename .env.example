COMPOSE_PROJECT_NAME=olnktr

# Application Ports
API_PORT=4000
WEB_PORT=3000

# Environment
NODE_ENV=production

# Database Configuration
POSTGRES_USER=olnktr
POSTGRES_PASSWORD=secretpassword
POSTGRES_DB=olnktr_db
# Database URL for backend (uses the docker internal hostname 'postgres')
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Secrets (Change these in production!)
JWT_ACCESS_SECRET=super_secret_access_key_12345
JWT_REFRESH_SECRET=super_secret_refresh_key_67890
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# CORS Origin
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:4000/api
